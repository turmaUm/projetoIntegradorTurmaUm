<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head', {css: ['clientes-adm.css']}) %>

  <body>

    <aside>

      <div class="asidebloco">
        <div class="titulo-img">
          <span>BRACKISH</span>
        </div>
        <div class="ul">
          <a href="/clientes-adm"><div class="nth1">Clientes</div></a>
          <a href="/produtos-adm"><div>Produtos</div></a>
          <a href="/pedidos-adm"><div class="nth">Pedidos</div></a>
        </div>
      </div>

    </aside>
    
    <main>

      <!-- <div class="mobile">
        <div id="botao">|||</div>
      </div> -->

      <section class="fullcontainer">

        <section class="cabecalho">
          <div class="userbar">
            <div class="user">
              <span>Alexandre Assis Rezende Santos</span>
            </div>
            <nav>
              <a href="">Perfil</a>
              |
              <a href="">Sair</a>
            </nav>
          </div>
          <div class="cabecalhoInter">
            <h3>Pedidos</h3>
            <div class="add">
              <button class="adicionar" type="button">Adicionar</button>
            </div>
          </div>
        </section>

        <table class="table table-borderless">

          <form class="tablepesquisar" action="/resultado-pedidos-adm" method="GET">
        
            <div class="filtros">

              <div class="secaoFiltros">
                <select name="resPorBusca" id="resPorBusca">
                  <option value="10">10</option>
                  <option value="20">20</option>
                  <option value="50">50</option>
                  <option value="100">100</option>
                </select>
                <label for="resPorBusca">Resultados por busca</label>
              </div>

              <div class="secaoPesquisa">
                <input
                  type="text"
                  name="pesquisar"
                  id="barraPesquisar"
                  placeholder="Pesquisar">
                <button type="submit"></button>
              </div>

            </div>
            
          </form>


            
          <tr id="cabecalhotable">
            <th>Cliente</th>
            <th>ID-produto</th>
            <th>Endereço</th>
            <th>Forma de Pagamento</th>
            <th>Ações</th>
          </tr>

              <% pedidos.forEach(pedido => { %>

              <tr>
                <td><%= pedido.clientes.nome %></td>
                <td><%= pedido.produtos.nome %></td>
                <td>
                  <%= pedido.enderecos.logradouro %>, <%=
                  pedido.enderecos.numero %>
                </td>
                <td><%= pedido.formas_de_pagamento.nome %></td>
                <td>
                  <div class="acao">
                    <div>Editar</div>
                    <div>x</div>
                  </div>
                </td>
              </tr>

              <% }) %>
              
            </table>

            <div class="showresults">
              <ul>
                <li><button><</button></li>
  
            <% for(let i=primeiroNumero; i<=ultimoNumero; i++){%>
              <li><a href="/pedidos-adm?pagina=<%= i %>&pesquisar=<%= consulta %>&resPorBusca=<%= resultadoPorBusca %>"> <%= i %> </a></li>
            <% } %>
  
                <li><button>></button></li>
  
              </ul>
            </div>

      </section>
    </main>
  </body>
</html>
