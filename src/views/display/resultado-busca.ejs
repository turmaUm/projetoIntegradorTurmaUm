<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head', {css: ['filtrosCliente.css', 'geral.css', 'headerStyle.css', 'resultado_busca.css', 'footerStyle.css']}) %>

<body>

    <%- include('../partials/header') %>

    <main>
        <section class="categoria-list">

          <div class="categorias">

            <h3 class="categoria-titulo">Categorias</h3>
  
            <ul>
                <a href="/resultado-busca" class="categoria-link"><li>Vitrine</li></a>
                <a href="/resultado-busca?categoria=7" class="categoria-link"><li>Feminino</li></a>
                <a href="/resultado-busca?categoria=2" class="categoria-link"><li>Masculino</li></a>
                <a href="/resultado-busca?categoria=3" class="categoria-link"><li>Lançamentos</li></a>
                <a href="/resultado-busca?categoria=11" class="categoria-link"><li>Sapatos</li></a>
                <a href="/resultado-busca?categoria=4" class="categoria-link"><li>Favoritos</li></a>
                <a href="/resultado-busca?categoria=13" class="categoria-link"><li>Promoções</li></a>
            </ul>

          </div>
            

            <div class="filtros">

              <form method="GET" action="/resultado-busca" id="secaoFiltro">
                <h3>Filtros</h3>
                <input type="hidden" value="<%= idCategoria %>" name="categoria">
                <div class="filter-section">
                  <div class="color-filters">

                    <div class="color-filter1">

                      <label for="color-red-filter">
                        <input type="checkbox" id="color-red-filter" name="color-filter" value="7">
                        <span class="color-box red"></span>
                        Vermelho
                      </label>
  
                      <label for="color-blue-filter">
                        <input type="checkbox" id="color-blue-filter" name="color-filter" value="1">
                        <span class="color-box blue"></span>
                        Azul
                      </label>
  
                      <label for="color-black-filter">
                        <input type="checkbox" id="color-black-filter" name="color-filter" value="4">
                        <span class="color-box green"></span>
                        Preto
                      </label>
  
                      <label for="color-black-filter">
                        <input type="checkbox" id="color-black-filter" name="color-filter" value="4">
                        <span class="color-box green"></span>
                        Verde
                      </label>
  
                      <label for="color-black-filter">
                        <input type="checkbox" id="color-black-filter" name="color-filter" value="4">
                        <span class="color-box green"></span>
                        Cinza
                      </label>
  
                      <label for="color-black-filter">
                        <input type="checkbox" id="color-black-filter" name="color-filter" value="4">
                        <span class="color-box green"></span>
                        Bege
                      </label>
  
                      <label for="color-black-filter">
                        <input type="checkbox" id="color-black-filter" name="color-filter" value="4">
                        <span class="color-box green"></span>
                        Branco
                      </label>

                    </div>

                    <div class="color-filter2">

                      <label for="color-black-filter">
                        <input type="checkbox" id="color-black-filter" name="color-filter" value="4">
                        <span class="color-box green"></span>
                        Marrom
                      </label>
                      <label for="color-black-filter">
                        <input type="checkbox" id="color-black-filter" name="color-filter" value="4">
                        <span class="color-box green"></span>
                        Amarelo
                      </label>
                      <label for="color-black-filter">
                        <input type="checkbox" id="color-black-filter" name="color-filter" value="4">
                        <span class="color-box green"></span>
                        Rosa
                      </label>
                      <label for="color-black-filter">
                        <input type="checkbox" id="color-black-filter" name="color-filter" value="4">
                        <span class="color-box green"></span>
                        Laranja
                      </label>

                    </div>
                  </div>
                </div>
    
                <div class="filter-section">
                  <div class="price-filters">
                    <label for="price-min-filter">Preço mínimo:</label>
                    <input type="number" id="price-min-filter" name="price-min-filter" min="0">
                    <label for="price-max-filter">Preço máximo:</label>
                    <input type="number" id="price-max-filter" name="price-max-filter" min="0">
                  </div>
                </div>
    
                <div class="filter-section">
                  <div class="size-filters">
                    <label for="size-small-filter">
                      <input type="checkbox" id="size-pp-filter" name="size-filter" value="PP">
                      PP
                    </label>
                    <label for="size-small-filter">
                      <input type="checkbox" id="size-p-filter" name="size-filter" value="P">
                      P
                    </label>
                    <label for="size-medium-filter">
                      <input type="checkbox" id="size-m-filter" name="size-filter" value="M">
                      M
                    </label>
                    <label for="size-large-filter">
                      <input type="checkbox" id="size-g-filter" name="size-filter" value="G">
                      G
                    </label>
                    <label for="size-large-filter">
                      <input type="checkbox" id="size-gg-filter" name="size-filter" value="GG">
                      GG
                    </label>
                    <label for="size-large-filter">
                      <input type="checkbox" id="size-gg-filter" name="size-filter" value="GG">
                      XXL
                    </label>
                  </div>
                </div>

            </div>

  
              <button type="submit" id="filtrar">Filtrar</button>
            </form>

        </section>

        <div class="ppp">

          


            <section>
                <div class="products-container">
                <% if (produtos.length > 0) { %>
                    <% for (const prod of produtos) { %>
        
                        <article class="produto-detalhado">
                                <a href="/produto?id=<%= prod.id%>"><img src=<%= prod.endereco %> alt="bermuda-agua-osklen"  class="img-produto-detalhado"></a>
                                <h4> <%= prod.nome %></h4>
                                <span>R$ <%= prod.preco %></span>
                                <!-- <a href="/produto?id=<%= prod.id%>" alt="roupa_loja" class="link-mais-detalhes">Ver mais detalhes</a> -->
                                <!-- <button class="bt-mais-detalhes">Adicionar ao carrinho</button> -->
                        </article> 
                        
                    <% } %>
                 
                <% } else { %>
                    <h1>Produto não encontrado</h1>
                <% } %>
                 
            </div>    
            </section>
        </div>
        
    </main>
    
    <%- include('../partials/footer') %>
    
</body>
</html>